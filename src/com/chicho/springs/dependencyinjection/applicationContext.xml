<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="a1" class="com.chicho.springs.dependencyinjection.Address">
		<constructor-arg value="Surat"></constructor-arg>
		<constructor-arg value="GJ"></constructor-arg>
		<constructor-arg value="India"></constructor-arg>
	</bean>

	<bean id="e" class="com.chicho.springs.dependencyinjection.Employee">
		<constructor-arg value="10" type="int"></constructor-arg>
		<constructor-arg value="Amitabh" type="String"></constructor-arg>
		<constructor-arg>
			<ref bean="a1" />
		</constructor-arg>

		<!-- If you don't specify the type attribute in the constructor-arg element, 
			by default string type constructor will be invoked. -->
	</bean>

</beans>